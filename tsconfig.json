{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "es6",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "src/setupTests.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
